{
  "root": true,
  "env": {
    "node": true
  },
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "ecmaVersion": 2020
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "plugin:vue/vue3-essential"
  ],
  "rules": {
    "no-console": "warn",
    "no-debugger": "warn",

    "semi": "error",

    "vue/script-indent": [ "warn", 2, {
      "baseIndent": 1
    }],

    "vue/html-indent": ["warn", 2, {
      "attribute": 1,
      "baseIndent": 1
    }]
  },
  "overrides": [

    {
      "files": [ "*.js", "*.ts" ],
      "rules": {

        "@typescript-eslint/indent": [ "warn", 2 ]

      }
    },

    {
      "files": [
        "**/__tests__/*.ts",
        "**/tests/unit/**/*.spec.ts"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
